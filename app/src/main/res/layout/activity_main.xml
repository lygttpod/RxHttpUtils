<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/global_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="统一请求---使用全局配置的相关参数" />

        <Button
            android:id="@+id/global_string_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="统一请求---接受string" />

        <Button
            android:id="@+id/multiple_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="链式发送多个请求" />

        <Button
            android:id="@+id/download_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件下载" />

        <Button
            android:id="@+id/download_cancel_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="取消下载" />


        <Button
            android:id="@+id/upload_one_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传单张图片" />

        <Button
            android:id="@+id/upload_more_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传多张图片" />

        <Button
            android:id="@+id/upload_pic_with_global_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用全局配置-上传图片" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="以下为多个baseUrl的使用方法" />

        <Button
            android:id="@+id/douan_api_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用豆瓣baseUrl请求数据" />

        <Button
            android:id="@+id/other_open_api_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用其他三方开放baseUrl请求数据" />

        <Button
            android:id="@+id/wanandroid_api_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用玩安卓baseUrl请求数据" />

        <TextView
            android:id="@+id/response_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
